<div id="unauthorized">
    <h3>Please log in to access your personal account</h3>
    {{#if errorMessage}}
    <div class="error-message">
        {{errorMessage}}
    </div>
    {{/if}}
    <form action="#" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" maxlength="100" required><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" maxlength="20" required><br>

        <button type="submit" class="login-btn">Log in</button>
        <button type="button" class="signup-btn" onclick="window.location.href='/registration'">Sign up</button>
    </form>
</div>